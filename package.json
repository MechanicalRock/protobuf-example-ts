{
  "name": "protobuf-tutorial-ts",
  "version": "1.0.0",
  "description": "Typescript tutorial for Protobuf",
  "directories": {
    "test": "test"
  },
  "author": "",
  "license": "",
  "scripts": {
    "test": "jest",
    "test:watch": "npm run test -- --watch",
    "test:integration": "npm run test -- --testMatch='**/*.test.integration.{ts,tsx}'",
    "test:accept": "npm run test  -- --testMatch='**/*.test.accept.{ts,tsx}' -i",
    "lint": "npx eslint ./src ./test --ext .ts",
    "test:coverage": "npm run test -- --coverage",
    "clean": "rm -Rf ./lib/*",
    "build": "npm run clean && tsc && echo 'tsc complete'"
  },
  "dependencies": {
    "google-protobuf": "^3.19.4",
    "ts-protoc-gen": "^0.15.0"
  },
  "devDependencies": {
    "@types/google-protobuf": "^3.15.5",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.18",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "eslint": "^8.9.0",
    "eslint-plugin-jest": "^26.1.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "jest": "^27.5.1",
    "jest-cucumber": "^3.0.1",
    "ts-jest": "^27.1.3",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.5.0",
    "typescript": "^4.5.5"
  }
}